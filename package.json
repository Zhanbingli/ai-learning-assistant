{
  "name": "ai-learning-assistant",
  "version": "1.0.0",
  "description": "AI-powered learning assistant that helps reduce learning friction and build sustainable habits across any subject",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio"
  },
  "keywords": [
    "learning",
    "ai",
    "education",
    "productivity",
    "habit-tracking"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "@prisma/client": "^5.7.0",
    "zod": "^3.22.4",
    "openai": "^4.20.1",
    "@anthropic-ai/sdk": "^0.9.1",
    "@google/generative-ai": "^0.1.3"
  },
  "devDependencies": {
    "prisma": "^5.7.0",
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}
